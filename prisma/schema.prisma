// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String?  @unique
  fullName  String?
  avatarUrl String?
  role      String   @default("shopper") // shopper, creator, admin, brand_rep
  password  String   @default("") // Added for simple auth simulation

  // Creator Specifics
  bio               String?
  niche             String?
  websiteUrl        String?
  instagramUrl      String?
  tiktokUrl         String?
  youtubeUrl        String?
  dolapAccountUrl   String? // For second hand sales
  gardropsAccountUrl String? // For second hand sales
  shopierAccountUrl String? // Extra bonus
  location          String?
  
  // Verification & OTP
  phoneNumber       String?  @unique
  isVerified        Boolean  @default(false)
  phoneCode         String?
  phoneCodeExpires  DateTime?
  
  applicationStatus String   @default("approved")
  rejectionReason   String?

  // Metrics & Qualification
  instagramFollowerCount Int @default(0)
  
  themeConfig       String? // JSON string for customization (colors, fonts)

  // Metrics
  followersCount      Int @default(0)
  productsSharedCount Int @default(0)
  profileViewCount    Int @default(0)
  totalEarnings       Decimal @default(0.00)

  // Relationships
  socialAccounts SocialAccount[]
  collections    Collection[]
  circleMemberships CircleMember[]
  createdCircles    Circle[]    @relation("CircleCreator")
  favorites         Favorite[]
  payments          Payment[]
  payoutRequests    PayoutRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model SocialAccount {
  id             String   @id @default(uuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform       String   // instagram, tiktok, youtube, pinterest
  platformUserId String?
  username       String?
  followerCount  Int?
  accessToken    String?
  refreshToken   String?
  lastSyncedAt   DateTime?

  @@unique([userId, platform])
  @@map("social_accounts")
}

model Brand {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  logoUrl     String?
  websiteUrl  String?
  description String?

  integrationType    String  @default("manual") // manual, shopify, woocommerce, xml_feed
  externalPlatformId String?
  commissionRate     Decimal @default(10.00)
  
  // Brand Application Info
  contactName      String?
  contactEmail     String?
  contactPhone     String?
  taxId            String?
  status           String  @default("pending") // pending, approved, rejected

  products Product[]

  createdAt DateTime @default(now())

  @@map("brands")
}

model Product {
  id       String  @id @default(uuid())
  brandId  String?
  brand    Brand?  @relation(fields: [brandId], references: [id])

  title       String
  description String?
  price       Decimal?
  currency    String   @default("TRY")
  salePrice   Decimal?

  // Integration / Stock Logic
  externalId           String?
  sku                  String?
  stockStatus          String  @default("in_stock") // in_stock, out_of_stock, discontinued
  productUrl           String
  affiliateUrlTemplate String?

  // Media
  imageUrl String? 
  
  // Organization
  category String?

  // Analytics
  clickCount      Int @default(0)
  viewCount       Int @default(0)
  favoritesCount  Int @default(0)
  favorites       Favorite[]

  collectionItems CollectionItem[]

  createdAt DateTime @default(now())
  indexedAt DateTime @default(now())

  @@map("products")
}

model Collection {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  slug        String? 
  description String?
  coverImageUrl String?
  isPublic    Boolean  @default(true)
  layoutType  String   @default("grid")
  category    String?

  items CollectionItem[]

  // Vitrin YÃ¶netimi
  displayOrder Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  
  @@map("collections")
}

model CollectionItem {
  id           String     @id @default(uuid())
  collectionId String
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  productId    String
  product      Product    @relation(fields: [productId], references: [id], onDelete: Cascade)

  curatorComment String?
  displayOrder   Int      @default(0)
  clickCount     Int      @default(0)
  isVisible      Boolean  @default(true) // Per-collection item visibility

  createdAt DateTime @default(now())

  @@map("collection_items")
}

model Circle {
  id            String   @id @default(uuid())
  name          String
  slug          String   @unique
  description   String?
  coverImageUrl String?

  creatorId     String? // The user who created/owns this circle
  creator       User?   @relation("CircleCreator", fields: [creatorId], references: [id])

  isVerified Boolean @default(true) 
  type       String  @default("public") // public, private, invite_only
  status     String  @default("approved") // pending, approved, rejected (Default approved for now to keep existing ones working)

  members CircleMember[]

  createdAt DateTime @default(now())

  @@map("circles")
}

model CircleMember {
  circleId String
  circle   Circle @relation(fields: [circleId], references: [id], onDelete: Cascade)
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     String @default("member") // admin, member
  status   String @default("approved") // pending, approved, rejected
  joinedAt DateTime @default(now())

  @@id([circleId, userId])
  @@map("circle_members")
}

model AnalyticsEvent {
  id        String   @id @default(uuid())
  type      String   // CLICK, VIEW, IMPRESSION
  entityId  String   // product_id, user_id (curator), etc.
  entityType String  // PRODUCT, PROFILE, LINK, COLLECTION
  
  userId    String?  // If logged in
  sessionId String?  // For anonymous tracking
  
  metadata  String?  // JSON string for extras (referrer, device, etc.)
  
  createdAt DateTime @default(now())

  @@index([entityId, entityType])
  @@index([type])
  @@map("analytics_events")
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@map("favorites")
}

// --- FINANCIAL MODELS ---

model Payment {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  amount        Decimal
  currency      String   @default("TRY")
  status        String   @default("pending") // pending, success, failed
  provider      String   @default("iyzico") // iyzico, stripe, manual
  
  // What are they paying for?
  type          String   // PROMOTION, SUBSCRIPTION
  targetId      String?  // ID of the thing being promoted (e.g. userId if boosting profile)
  
  externalId    String?  // Iyzico Payment ID
  createdAt     DateTime @default(now())

  @@map("payments")
}

model PayoutRequest {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  amount        Decimal
  status        String   @default("pending") // pending, paid, rejected
  
  iban          String?
  note          String?
  
  processedAt   DateTime?
  createdAt     DateTime @default(now())

  @@map("payout_requests")
}
