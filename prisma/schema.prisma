// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String?  @unique
  fullName  String?
  avatarUrl String?
  role      String   @default("shopper") // shopper, creator, admin, brand_rep
  password  String   @default("") // Added for simple auth simulation

  // Creator Specifics
  bio               String?
  niche             String?
  websiteUrl        String?
  instagramUrl      String?
  tiktokUrl         String?
  youtubeUrl        String?
  dolapAccountUrl   String? // For second hand sales
  gardropsAccountUrl String? // For second hand sales
  shopierAccountUrl String? // Extra bonus
  location          String?
  
  // Verification & OTP
  phoneNumber       String?  @unique
  isVerified        Boolean  @default(false)
  phoneCode         String?
  phoneCodeExpires  DateTime?
  
  applicationStatus String   @default("approved")
  rejectionReason   String?

  // Talent Card / Demographics
  dateOfBirth       DateTime?
  gender            String?  // Female, Male, Non-binary, Prefer not to say
  ethnicity         String?
  
  // Talent Card / Preferences & Identity
  giftPreferences   String?  // JSON string or CSV: ["Beauty", "Fashion"]
  identity          String?  // "Lifestyle Influencer", "Mom Blogger"
  openToPromote     String?  // JSON/CSV: Categories they are open to
  familyStatus      String?  // "Married with kids", "Single", etc.
  lifeEvents        String?  // "Getting married", "Moving", etc.

  // Metrics & Qualification
  instagramFollowerCount Int @default(0)
  
  // Custom Audience Data (Manual Entry for Media Kit)
  audienceData      String? // JSON: { gender: { female: 80, male: 20 }, age: { "18-24": 30, ... }, location: ... }
  
  themeConfig       String? // JSON string for customization (colors, fonts)

  // Gamification & Tiers
  xp                Int @default(0)

  // Metrics
  followersCount      Int @default(0)
  productsSharedCount Int @default(0)
  profileViewCount    Int @default(0)
  totalEarnings       Decimal @default(0.00)

  // Relationships
  socialAccounts SocialAccount[]
  collections    Collection[]
  circleMemberships CircleMember[]
  createdCircles    Circle[]    @relation("CircleCreator")
  favorites         Favorite[]
  payments          Payment[]
  payouts           Payout[]
  transactions      Transaction[]
  taxInfo           TaxInfo?
  
  // Advanced Features
  campaignApplications CampaignApplication[]
  userQuests           UserQuest[]
  feedbacks            Feedback[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model SocialAccount {
  id             String   @id @default(uuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform       String   // instagram, tiktok, youtube, pinterest
  platformUserId String?
  username       String?
  followerCount  Int?
  accessToken    String?
  refreshToken   String?
  lastSyncedAt   DateTime?

  @@unique([userId, platform])
  @@map("social_accounts")
}

model Brand {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  logoUrl     String?
  websiteUrl  String?
  description String?

  integrationType    String  @default("manual") // manual, shopify, woocommerce, xml_feed
  externalPlatformId String?
  commissionRate     Decimal @default(10.00)
  
  // Brand Application Info
  contactName      String?
  contactEmail     String?
  contactPhone     String?
  taxId            String?
  status           String  @default("pending") // pending, approved, rejected

  products  Product[]
  campaigns Campaign[]

  createdAt DateTime @default(now())

  @@map("brands")
}

model Product {
  id       String  @id @default(uuid())
  brandId  String?
  brand    Brand?  @relation(fields: [brandId], references: [id])

  title       String
  description String?
  price       Decimal?
  currency    String   @default("TRY")
  salePrice   Decimal?

  // Integration / Stock Logic
  externalId           String?
  sku                  String?
  stockStatus          String  @default("in_stock") // in_stock, out_of_stock, discontinued
  productUrl           String
  affiliateUrlTemplate String?

  // Media
  imageUrl String? 
  
  // Organization
  category String?

  // Analytics
  clickCount      Int @default(0)
  viewCount       Int @default(0)
  favoritesCount  Int @default(0)
  favorites       Favorite[]

  collectionItems CollectionItem[]

  createdAt DateTime @default(now())
  indexedAt DateTime @default(now())

  @@map("products")
}

model Collection {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  slug        String? 
  description String?
  coverImageUrl String?
  isPublic    Boolean  @default(true)
  layoutType  String   @default("grid")
  category    String?

  items CollectionItem[]

  // Vitrin Yönetimi
  displayOrder Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  
  @@map("collections")
}

model CollectionItem {
  id           String     @id @default(uuid())
  collectionId String
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  productId    String
  product      Product    @relation(fields: [productId], references: [id], onDelete: Cascade)

  curatorComment String?
  customTitle    String?    // Overrides product title for this collection
  customImageUrl String?    // Overrides product image for this collection
  
  displayOrder   Int      @default(0)
  clickCount     Int      @default(0)
  isVisible      Boolean  @default(true) // Per-collection item visibility

  createdAt DateTime @default(now())

  @@map("collection_items")
}

model Circle {
  id            String   @id @default(uuid())
  name          String
  slug          String   @unique
  description   String?
  coverImageUrl String?

  creatorId     String? // The user who created/owns this circle
  creator       User?   @relation("CircleCreator", fields: [creatorId], references: [id])

  isVerified Boolean @default(true) 
  type       String  @default("public") // public, private, invite_only
  status     String  @default("approved") // pending, approved, rejected (Default approved for now to keep existing ones working)

  members CircleMember[]

  createdAt DateTime @default(now())

  @@map("circles")
}

model CircleMember {
  circleId String
  circle   Circle @relation(fields: [circleId], references: [id], onDelete: Cascade)
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     String @default("member") // admin, member
  status   String @default("approved") // pending, approved, rejected
  joinedAt DateTime @default(now())

  @@id([circleId, userId])
  @@map("circle_members")
}

model AnalyticsEvent {
  id        String   @id @default(uuid())
  type      String   // CLICK, VIEW, IMPRESSION
  entityId  String   // product_id, user_id (curator), etc.
  entityType String  // PRODUCT, PROFILE, LINK, COLLECTION
  
  userId    String?  // If logged in
  sessionId String?  // For anonymous tracking
  
  metadata  String?  // JSON string for extras (referrer, device, etc.)
  
  createdAt DateTime @default(now())

  @@index([entityId, entityType])
  @@index([type])
  @@map("analytics_events")
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@map("favorites")
}

// --- FINANCIAL MODELS ---

model Payment {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  amount        Decimal
  currency      String   @default("TRY")
  status        String   @default("pending") // pending, success, failed
  provider      String   @default("iyzico") // iyzico, stripe, manual
  
  // What are they paying for?
  type          String   // PROMOTION, SUBSCRIPTION
  targetId      String?  // ID of the thing being promoted (e.g. userId if boosting profile)
  
  externalId    String?  // Iyzico Payment ID
  createdAt     DateTime @default(now())

  @@map("payments")
}

model Transaction {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  type        String   // COMMISSION, REFERRAL, BONUS, PAYOUT
  amount      Decimal  // (+) Earnings, (-) Payouts
  currency    String   @default("TRY")
  
  status      String   @default("PENDING") // PENDING, APPROVED, PAID, CANCELLED
  
  // Source Details
  sourceType  String?  // PRODUCT, CAMPAIGN, USER_REFERRAL
  sourceId    String?  // Product ID, Brand ID, etc.
  
  description String?  // e.g. "Trendyol - Kazak Satışı Komisyonu"
  
  toBePaidAt  DateTime? // Valör tarihi
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, status])
  @@map("transactions")
}

model Payout {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  amount      Decimal
  status      String   @default("PROCESSING") // PROCESSING, PAID, FAILED
  
  iban        String
  receiptUrl  String?
  
  processedAt DateTime?
  createdAt   DateTime @default(now())

  @@map("payouts")
}

model TaxInfo {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])

  fullName    String
  idNumber    String   // TC Kimlik / Vergi No
  address     String
  isCompany   Boolean  @default(false)

  updatedAt   DateTime @updatedAt
  
  @@map("tax_info")
}

// --- ADVANCED FEATURES (CAMPAIGNS, ANALYTICS, GAMIFICATION) ---

model Campaign {
  id          String   @id @default(uuid())
  brandId     String
  brand       Brand    @relation(fields: [brandId], references: [id])
  
  title       String
  description String
  requirements String? // e.g. "Min 10k followers on IG"
  budget      Decimal? // Target budget / max budget
  currency    String   @default("TRY")
  
  type        String   @default("gifting") // gifting, paid, affiliate
  status      String   @default("active") // active, closed, draft

  applications CampaignApplication[]

  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  @@map("campaigns")
}

model CampaignApplication {
  id          String   @id @default(uuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  pitch       String?  // Why they are a good fit
  budget      Decimal? // Their proposed rate
  currency    String   @default("TRY")
  includeStats Boolean @default(true) // Whether they attached their media kit metrics

  status      String   @default("pending") // pending, approved, rejected, completed

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, campaignId])
  @@map("campaign_applications")
}

model DailyAnalytics {
  id        String   @id @default(uuid())
  userId    String?  // Nullable if tracking system-wide, but mostly for Creators
  date      DateTime @default(dbgenerated("CURRENT_DATE"))

  views     Int      @default(0)
  clicks    Int      @default(0)
  
  // Sources Breakdown
  instagramClicks Int @default(0)
  tiktokClicks    Int @default(0)
  directClicks    Int @default(0)

  // Sales Impact
  ordersGenerated Int     @default(0)
  estimatedRevenue Decimal @default(0)

  @@unique([userId, date])
  @@map("daily_analytics")
}

model Quest {
  id          String   @id @default(uuid())
  title       String
  description String
  points      Int      @default(10)
  
  actionUrl   String?  // Where to send the user to complete it (e.g. /dashboard/media-kit)
  type        String   // e.g. PROFILE_COMPLETION, FIRST_SALE, LINK_SOCIAL

  userQuests  UserQuest[]

  createdAt   DateTime @default(now())

  @@map("quests")
}

model UserQuest {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questId     String
  quest       Quest    @relation(fields: [questId], references: [id], onDelete: Cascade)

  isCompleted Boolean  @default(false)
  completedAt DateTime?

  @@unique([userId, questId])
  @@map("user_quests")
}

model Feedback {
  id        String   @id @default(uuid())
  content   String
  type      String   @default("suggestion") // bug, suggestion, other
  url       String?  
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  status    String   @default("new") // new, in_progress, resolved
}

